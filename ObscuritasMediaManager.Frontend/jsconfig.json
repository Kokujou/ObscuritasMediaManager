{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "checkJs": true,
        "sourceMap": false,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "watch": true,
        "pretty": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    },
    "include": ["**/*.js"],
    "exclude": [
        "./node_modules/**",
        "**/*.bundled.js",
        "**/exports.js",
        "./rollup.config.js",
        "./node_modules/**/*.js",
        "<node_internals>/**/*.js"
    ],

    "compileOnSave": true
}
