{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "checkJs": true,
        "allowJs": true,
        "sourceMap": false,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "watch": true,
        "pretty": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
        // "plugins": [
        //     {
        //         "name": "typescript-lit-events-and-attributes"
        //     }
        // ]
    },
    "include": ["**/*.js"],
    "exclude": [
        "**/*.bundled.js",
        "**/exports.js",
        "**/rollup.config.js",
        "<node_internals>/**/*.js",
        "**/templates/**",
        "**/node_modules/**",
        "**/*.stories*",
        "**/.storybook/**",
        "**/obscuritas-media-manager-backend-client.js"
    ],

    "compileOnSave": true
}
