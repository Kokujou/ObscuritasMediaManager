{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "checkJs": true,
        "allowJs": true,
        "sourceMap": false,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "watch": true,
        "pretty": true,
        "skipLibCheck": true
    },
    "include": ["**/*.ts"],
    "exclude": [
        "**/*.bundled.js",
        "**/exports.js",
        "**/rollup.config.js",
        "<node_internals>/**/*.js",
        "**/templates/**",
        "**/node_modules/**",
        "**/*.stories*",
        "**/.storybook/**",
        "**/obscuritas-media-manager-backend-client.js",
        "**/bin/**",
        "**/obj/**"
    ],

    "compileOnSave": true
}
