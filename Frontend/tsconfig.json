{
    "buildOptions": {},
    "compilerOptions": {
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "target": "ESNext",
        "sourceMap": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "pretty": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictBindCallApply": true,
        "plugins": [{ "name": "ts-lit-plugin" }]
    },
    "include": ["**/*.ts", "**/*.json", "native-components/loading-screen/loading-screen.js"],
    "exclude": ["**/templates/**"],

    "compileOnSave": true
}
